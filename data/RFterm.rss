	{
	menubar = r_menubar;
	cba = R_AVKON_SOFTKEYS_OPTIONS_EXIT;
	}


// -----------------------------------------------------------------------------
//
//   r_menubar
//   Main menubar
//
// -----------------------------------------------------------------------------
//
RESOURCE MENU_BAR r_menubar
	{
	titles =
		{
		MENU_TITLE { menu_pane = r_menu; }
		};
	}


// -----------------------------------------------------------------------------
//
//   r_menu
//   Menu for "Options"
//
// -----------------------------------------------------------------------------
//
RESOURCE MENU_PANE r_menu
	{
	items =
		{
		// added the new Options menu command here
		MENU_ITEM
				{
				command = EConnect;
				txt = qtn_connect;
				},
		MENU_ITEM
				{
				command = EDisconnect;
				txt = qtn_disconnect;
				},
		MENU_ITEM
				{
				command = ESend;
				txt = qtn_send;
				},
		MENU_ITEM
				{
				command = EClear;
				txt = qtn_clear;
				},
		MENU_ITEM
				{
				command = ESettings;
				txt = qtn_settings;
				},
		MENU_ITEM
				{
				command = EHelp;
				txt = qtn_help;
				},
		MENU_ITEM
				{
				command = EAbout;
				txt = qtn_about;
				},
		MENU_ITEM
				{
				command = EAknSoftkeyExit;
				txt = qtn_exit;
				}
		};
	}

